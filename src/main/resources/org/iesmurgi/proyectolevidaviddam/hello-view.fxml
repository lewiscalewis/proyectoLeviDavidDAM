                     <ImageView fitHeight="80.0" fitWidth="200.0" layoutX="74.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                        <image>
                           <Image url="@Sample_User_Icon.png" />
                        </image>
                     </ImageView>
                  </children>
               </Pane>
            </children>
         </HBox>
      </top>
      <center>
         <VBox fx:id="pageRoot" prefHeight="200.0" prefWidth="100.0" styleClass="pageRoot" stylesheets="@css/cssmenu.css" BorderPane.alignment="CENTER">
            <children>
            
                <Label fx:id="labelSampleRequest" />
            </children>
         </VBox>
      </center>
   </BorderPane>
