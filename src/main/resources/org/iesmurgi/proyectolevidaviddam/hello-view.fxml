         <HBox BorderPane.alignment="CENTER">
            <children>
               <ImageView fitHeight="79.0" fitWidth="151.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@BitStore_Logo.png" />
                  </image>
               </ImageView>
                <Button fx:id="btnStore" minWidth="200.0" onAction="#loadHomePage" prefHeight="80.0" prefWidth="200.0" styleClass="botonMainMenu" stylesheets="@css/cssmenu.css" text="Home">
                  <font>
                     <Font name="DejaVu Sans Bold" size="24.0" />
                  </font>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <effect>
                     <DropShadow height="8.25" radius="2.35" width="3.15" />
                  </effect>
               </Button>
               <Button fx:id="btnProfile" minWidth="200.0" onAction="#loadProfilePage" prefHeight="80.0" prefWidth="200.0" styleClass="botonMainMenu" stylesheets="@css/cssmenu.css" text="Profile">
                  <font>
                     <Font name="DejaVu Sans Bold" size="24.0" />
                  </font>
                  <effect>
                     <DropShadow height="8.25" radius="2.35" width="3.15" />
                  </effect>
               </Button>
               <Pane maxWidth="1.7976931348623157E308" nodeOrientation="RIGHT_TO_LEFT" prefHeight="80.0" prefWidth="2000.0" style="-fx-background-color: white;">
